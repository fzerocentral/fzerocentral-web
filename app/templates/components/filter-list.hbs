<ul class="plain-bullet-list">
  {{#each this.filters as |filter|}}
    <li>
      <button type="button" class="show-filter-detail-button" {{action "updateSelectedFilterIdAction" filter.id}}> {{filter.name}} </button>
    </li>
  {{/each}}
</ul>

<div>
  Search: <Input @type="text" @value={{this.searchText}} class="search-input" />
</div>

<PageNavigation @pageResults={{this.filters}} @pageNumber={{this.pageNumber}} @updatePageNumber={{action (mut this.pageNumber)}} />
