<h1>
  Edit record for:
  <LinkTo @route="charts.show" @model={{@model.record.chart}}>
    {{@model.record.chart.chartGroup.name}} - {{@model.record.chart.name}}
  </LinkTo>
</h1>

<div>Player: {{@model.record.player.username}}</div>
<div>Value: {{@model.record.valueDisplay}}</div>

<div>
  <label>Date achieved</label>
  <DateField @dateValue={{@model.record.achievedAt}} />
</div>

<RecordFiltersEdit
  @filterGroups={{@model.filterGroups}}
  @filters={{@model.record.filters}} />

<div><button type="submit" {{action "saveRecord"}}>Save edits</button></div>
