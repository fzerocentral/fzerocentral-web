<h1>
  Edit record for:
  <LinkTo @route="charts.show" @model={{@model.record.chart.id}}>
    {{@model.record.chart.chartGroup.name}} - {{@model.record.chart.name}}
  </LinkTo>
</h1>

<div>Player: {{@model.record.player.username}}</div>
<div>Value: {{@model.record.value}}</div>

<div>
  <label>Date achieved</label>
  <DateField
    @initialDateValue={{@model.record.dateAchieved}}
    @updateDateValue={{action (mut @model.record.dateAchieved)}} />
</div>

<RecordFiltersEdit
  @filterGroups={{@model.filterGroups}}
  @filterOptions={{this.filterOptionsByGroup}}
  @selectedFilters={{this.selectedFiltersByGroup}}
  @selectFilter={{this.selectFilter}}
  @onSearchTextChange={{this.onSearchTextChange}} />

<div><button type="submit" {{action "saveRecordEdits"}}>Save edits</button></div>
