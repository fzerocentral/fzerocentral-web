<table class="ladders">
  <thead>
    <tr>
      <th>Name</th>
      <th>Filter spec</th>
      <th>Chart group</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    {{#each @ladders as |ladder|}}
      <tr>
        <td>
          <LinkTo @route="ladders.show" @model={{ladder.id}}>
            {{ladder.name}}
          </LinkTo>
        </td>
        <td>
          {{ladder.filterSpec}}
        </td>
        <td>
          {{ladder.chartGroup.name}}
        </td>
        <td>
          <button type="button" {{on "click" (fn @deleteLadder ladder.id)}}>
            Delete
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
