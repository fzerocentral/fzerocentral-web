<ul>
  {{#each @filters as |filter|}}
    <li>
      <button
        type='button'
        class='show-filter-detail-button'
        {{on 'click' (fn @updateSelectedFilterId filter.id)}}
      >
        {{filter.name}}
      </button>
    </li>
  {{/each}}
</ul>

<div>
  <label for={{@searchFieldId}}>Search:</label>
  <input
    id={{@searchFieldId}}
    type='text'
    name='filter-search'
    {{on 'input' this.onSearchTextChange}}
  />
</div>

<PageNavigation
  @pageResults={{@filters}}
  @updatePageNumber={{@updatePageNumber}}
/>